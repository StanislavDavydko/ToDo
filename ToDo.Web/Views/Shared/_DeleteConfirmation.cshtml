@model ToDo.Web.Shared.DeleteConfirmationViewModel

@{
    var title = $"Delete {Model.EntityName}";
    var description = $"Are you sure you want to delete \"{Model.ItemName}\" ?";
    Layout = null;
}

<div mw-modal-container>
    <div class="modal-backdrop fade show"></div>
    <div class="modal fade show" tabindex="-1" role="dialog" style="display: block;">
        <div class="modal-dialog modal-dialog-centered modal-sm modal-activate" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@title</h5>
                </div>
                <form asp-controller="@Model.ControllerName" asp-action="@Model.DeleteActionName">
                    <div class="modal-body">
                        <input type="hidden" asp-for="@Model.EntityId" />
                        <p>@description</p>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-danger">
                            Delete
                        </button>
                        <button class="btn btn-outline-dark"
                                mw-close-modal>
                            Cancel
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
